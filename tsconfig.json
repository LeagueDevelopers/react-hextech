{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "lib",
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "checkJs": true,
    "rootDir": "src",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@theme": ["src/theme.js"],
      "@utils": ["src/utils/index.ts"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/components/__tests__", "src/theme.js"]
}
